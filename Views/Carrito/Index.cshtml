
<div style="width:600px;">
    <div class="row">
        <div class="col-12">
            <div class="float-right">
                <table border="1">
                    <tr>
                        <th>Nombre</th>
                        <th>Imagen</th>
                        <th>Precio</th>

                        <th>Cantidad</th>
                        <th>Acción</th>
                        <th>Subtotal</th>

                    </tr>
                    @foreach (Elemento item in ViewBag.carr)
                    {
                        <tr>
                            <td>@item.producto.nombre</td>
                            <td><img src="~/imagenes/@item.producto.imagen" width="100" /></td>
                            <td>@item.producto.precio</td>
                            <td>@item.cantidad</td>
                            <td><a asp-controller="Carrito" asp-action="Eliminar" asp-route-idprod="@item.producto.id">Eliminar uno</a></td>

                            <td>@(item.producto.precio * item.cantidad)</td>

                        </tr>
                    }
                    <tr>
                        <td colspan="6" align="right">Total: </td>
                        <td>@ViewBag.total</td>
                    </tr>

                </table>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-12">
            <p align="right">
                <a asp-controller="Home" asp-action="Index">Volver atras </a>
                <a asp-controller="Fin" asp-action="Index">Finalizar compra</a>
            </p>
        </div>
    </div>
</div>
